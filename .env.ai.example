# AI Features Configuration
# Copy to .env and configure

# ========== RERANKER (Jina AI) ==========
# Переранжирование результатов поиска нейросетью
RERANKER_ENABLE=false
RERANKER_BASE_URL=https://api.jina.ai/v1
RERANKER_API_KEY=your_jina_api_key_here
RERANKER_MODEL=jina-reranker-v2-base-multilingual
RERANKER_TIMEOUT=30s
RERANKER_TOP_N=10

# ========== LLM (OpenAI / Azure OpenAI) ==========
# Генерация контента и анализ намерений
LLM_ENABLE=false
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4o-mini
LLM_TIMEOUT=60s

# ========== COMPUTER VISION ==========
# Анализ фотографий объектов
VISION_ENABLE=false
VISION_BASE_URL=https://your-cv-api.com
VISION_API_KEY=your_vision_api_key_here
VISION_TIMEOUT=30s

# ========== SEARCH CONFIGURATION ==========
# Гибридный поиск (векторный + полнотекстовый)
HYBRID_SEARCH_ENABLE=true
SEARCH_VECTOR_WEIGHT=0.7
SEARCH_FULLTEXT_WEIGHT=0.3

# Использовать реранкер для финального ранжирования
SEARCH_USE_RERANKER=false

# Количество кандидатов для реранкера
SEARCH_RERANKER_CANDIDATES=50

# Динамическое определение весов через LLM
DYNAMIC_WEIGHTS_ENABLE=false

